contains

    #:set CR_NAME = ['rmut', 'cmut', 'rcmut', 'crmut']
    #:for c1 in CR_NAME
    #:for kind in REAL_KINDS
    function ${c1}$_${kind}$(m1, m2) result(res)
        !! ${type}$ matrix multiplication
        #:if c1 == 'rmut'
        real(${kind}$), intent(in) :: m1(:, :), m2(:, :)
        real(${kind}$) :: res(size(m1, 1), size(m2, 2))   

        #:elif c1 == 'cmut'
        complex(${kind}$), intent(in) :: m1(:, :), m2(:, :)
        complex(${kind}$) :: res(size(m1, 1), size(m2, 2))  

        #:elif c1 == 'rcmut'
        real(${kind}$), intent(in) :: m1(:, :)
        complex(${kind}$), intent(in) :: m2(:, :)
        complex(${kind}$) :: res(size(m1, 1), size(m2, 2))
        
        #:elif c1 == 'crmut'
        complex(${kind}$), intent(in) :: m1(:, :)
        real(${kind}$), intent(in) :: m2(:, :)
        complex(${kind}$) :: res(size(m1,1), size(m2, 2))
        #:endif

        if (size(m1, 2) == size(m2, 1)) then
            res = matmul(m1, m2)
        else
            call error_stop('Error: size(matrix_1, 2) /= size(matrix_2, 1)') 
        end if
    end function ${c1}$_${kind}$
    #:endfor
    #:endfor

    #:set RC_KINDS_TYPES = REAL_KINDS_TYPES + CMPLX_KINDS_TYPES
    #:for kind, type in RC_KINDS_TYPES
    function is_square_${type[0]}$${kind}$(A) result(is_square)
        !! ${type}$ matrix is square or not.
        ${type}$, intent(in) :: A(:,:)
        logical :: is_square
        is_square = .false.
        if (size(A, 1) == size(A, 2)) is_square = .true.
        return
    end function is_square_${type[0]}$${kind}$
    #:endfor

    #:set RC_KINDS_TYPES = REAL_KINDS_TYPES + CMPLX_KINDS_TYPES
    #:for kind, type in RC_KINDS_TYPES
    function is_symmetric_${type[0]}$${kind}$(A) result(is_symmetric)
        !! ${type}$ matrix is symmetric or not.
        ${type}$, intent(in) :: A(:,:)
        logical :: is_symmetric
        integer :: i, j, n
        is_symmetric = .true.
        if (.not. is_square(A)) then
            is_symmetric = .false.
            return
        else
            n = size(A, 1)
            do i = 1, n
                do j = 1, n
                    if (A(i, j) .ne. A(j, i)) then
                        is_symmetric = .false.
                        return
                    end if
                end do
            end do
        end if
        return
    end function is_symmetric_${type[0]}$${kind}$
    #:endfor

    #:for k1,t1 in REAL_KINDS_TYPES
    function trace_${k1}$(A) result(trace)
        ${t1}$, dimension(:, :), intent(in) :: A
        ${t1}$ :: trace

        trace = sum(diag(A))

    end function trace_${k1}$
    #:endfor


end module forlab_linalg